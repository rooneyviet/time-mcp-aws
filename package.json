{
  "name": "time-mcp-server",
  "version": "1.0.0",
  "description": "MCP Time Server - Time and timezone conversion functionality for MCP",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "cdk:install": "cd infrastructure && pnpm install",
    "cdk:build": "cd infrastructure && pnpm run build",
    "cdk:deploy": "cd infrastructure && pnpm run deploy",
    "cdk:destroy": "cd infrastructure && pnpm run destroy",
    "cdk:synth": "cd infrastructure && pnpm run synth",
    "deploy:all": "pnpm run build && pnpm run cdk:build && pnpm run cdk:deploy"
  },
  "keywords": [
    "mcp",
    "time",
    "timezone",
    "server"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67"
}
